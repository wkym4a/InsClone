
<!--↓タイトル表示枠-->
<% content_for :show_head_title do%>
  <h1 class="title_head">投稿一覧画面</h1>
<% end %>
<!--↑タイトル表示枠-->


<%= link_to '新たに投稿する', new_picture_path ,class: "btn btn-default"  %>


<div class="box_picture_index">
  <table class="" >
    <% @pictures.each do |picture| %>
      <tr class="row box_picture_index_content">
        <td class="col-xs-12">
          <div class="row row-eq-height index_box_line">

            <div class="col-xs-12 boxline_picture_index">
              <div class="">
                <%= label "",picture.user.name.to_s  + "さんの投稿です。"  %>
              </div>
            </div>

            <div div="col-xs-12 boxline_picture_index">
              <%= label ""," 　　 題名："  %>
              <%= label "",picture.title ,class: 'i' %>
            </div>

            <div class="col-xs-12 boximage_picture_index">
              <% if picture.image && picture.image.url %>
                <%= image_tag(picture.image.url)  %>
              <% else %>
                <%= label ""," 　　画像はまだ登録されていません。"  %>
              <% end %>
            </div>

            <div class="col-xs-12 boxarea_picture_index">
              <%= text_area "","readonly", value: picture.content ,readonly: true ,class: "boxarea_picture_index_content"%>
            </div>

            <div class="col-xs-8">
            </div>

            <div class="col-xs-2">
              <%= link_to "（未実装）", picture,href: picture_path(picture.id),method: :get,class: "btn btn-default"  %>
            </div>

            <div class="col-xs-2">
              <%= link_to "詳細を表示", picture,href: picture_path(picture.id),method: :get,class: "btn btn-default"  %>
            </div>

          </div>

        </td>


      </tr>
    <% end %>
  </table>
</div>



<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= picture.image %></td>
        <td><%= picture.user %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
